<a class="product name product-item-name"
   href="<?= $block->escapeUrl($block->getProductUrl()) ?>"
   title="<?= $block->escapeHtml($block->getProductName()) ?>">
    <?= $block->escapeHtml($block->getProductName()) ?></a>
