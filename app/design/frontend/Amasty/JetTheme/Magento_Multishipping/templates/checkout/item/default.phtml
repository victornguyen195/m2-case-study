            <dd<?= (isset($formatedOptionValue['full_view']) ? ' class="tooltip wrapper"' : '') ?>>
                <?= $block->escapeHtml($formatedOptionValue['value'], ['span']) ?>
                <?php if (isset($formatedOptionValue['full_view'])): ?>
                    <dl class="item options tooltip content">
                        <dt><?= $block->escapeHtml($option['label']) ?></dt>
                        <dd><?= $block->escapeHtml($formatedOptionValue['full_view'], ['span']) ?></dd>
                    </dl>
                <?php endif; ?>
            </dd>
        <?php endforeach; ?>
    </dl>
<?php endif; ?>
