<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title" remove="true" />
        <referenceBlock name="content">
            <block class="Magento\Customer\Block\Account\Dashboard\Info"
                   name="amtheme.dashboard.pagetitle"
                   template="Magento_Customer::account/dashboard/page-title.phtml"
                   before="-"
            />
        </referenceBlock>
        <move element="customer_account_dashboard_top" destination="content" after="customer_account_dashboard_address"/>
    </body>
</page>
