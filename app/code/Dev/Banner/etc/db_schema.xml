<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="banner">
        <column xsi:type="int" name="banner_id" unsigned="true" nullable="false" comment="Banner Id" identity="true" />
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Banner Name" />
        <column xsi:type="varchar" name="description" nullable="false" length="255" comment="Banner Description" disabled="true"/>
        <column xsi:type="varchar" name="image" nullable="false" length="255" comment="Banner Image" />
        <column xsi:type="int" name="status" nullable="false" padding="2" comment="Banner Image" />
        <index referenceId="DEV_BANNER_ID" indexType="btree">
            <column name="banner_id"/>
        </index>
    </table>
</schema>
